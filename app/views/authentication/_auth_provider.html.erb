<%# This partial is called once for each authentication provider exposed to the view. %>

<div id='<%= auth_provider.name.downcase %>' class="authentication_provider clear" style='display: none;'><%# The display:none style has to be inline for prototype Element.hide/show to work. %>
	
	<% form_tag user_session_path, {:id => "#{auth_provider.type.underscore}_form", :onsubmit => disable_submit } do %>
		
		<%=	render :partial => "authentication/#{auth_provider.type.underscore}", :object => auth_provider %>
		<%= hidden_field_tag :auth_method, auth_provider.name.downcase %>
		
	<% end %>
	
</div>