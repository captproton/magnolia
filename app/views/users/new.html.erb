<h1>Join Ma.gnolia</h1>
 
<% form_for @user do |f| %>

  <%= f.error_messages %>

	<%= render :partial => '/users/email_field' %>
	
	<p>We'll send a confirmation email to this address.</p>
	
	<%= render :partial => '/users/screen_name_field' %>

	<p>
		<%= f.label :password %><br />
		<%= f.password_field :password, :onblur => "checkPasswords('check_password')" %>
	</p>
	
	<p>
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation, :onblur => "checkPasswords('check_password')" %>
	</p>
	
	<p id="check_password">
	</p>
	
	<%= render :partial => '/users/terms_of_use' %>

  <%= f.submit "Next" %>

<% end %>