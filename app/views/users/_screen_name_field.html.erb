<p>
	<%= label_tag 'user[screen_name]', 'Screen Name' %><br />
	<%= text_field_tag 'user[screen_name]', @user.screen_name, :onblur => "checkScreenName(this.value, 'check_username', '#{form_authenticity_token}')", :size => 30 %>
</p>
<p id="check_username">
	<%= screen_name_taken?(@user.screen_name) unless @user.screen_name.blank? %>
</p>